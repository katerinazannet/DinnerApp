@model List<DinnerApp.Models.Entree>

@{
	ViewBag.Title = "Index";
	
}

<h2>All Entrees</h2>

@if (TempData["ErrorMessage"] != null)
{

	<spam> @TempData["ErrorMessage"]</spam>

}
 <table>
	 <thead>
		 <tr>
			 <th>
				 Name
			 </th>
			 <th>
				 Ingredients
			 </th>
		 </tr>
	 </thead>
	 <tbody>
		 @foreach (var entree in Model)
		  {
			 <tr>
				 <td>
					 @Html.ActionLink(entree.Name, "Details", new { id = entree.ID})
					 @* θα φτιαξει οσα actuion link οσα entree εχω*@
				 </td>
				 <td>
					 @*Render using partial*@
					 @Html.Partial("_Ingredients",entree.Ingredients)
				 </td>
			 </tr>
		  }
	 </tbody>
 </table>

